 <div class="mt-4">
    <h3>Tạo sản phẩm</h3>
    <form  id="productForm" method="POST" action="/products/store" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
         <div class="mb-3">
            <label for="image" class="form-label">Hình ảnh</label>
            <input type="file" class="form-control" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá tiền</label>
            <input type="text" class="form-control" id="price" name="price">
        </div>
        <div class="mb-3">
            <label for="quantity" class="form-label">Số lượng sản phẩm</label>
            <input type="text" class="form-control" id="quantity" name="quantity">
        </div>
        <div class="mb-3">
            <label for="categories" class="form-label">Loại sản phẩm</label>
            <select class="form-control" id="categories" name="categories">
                <option value="">--Chọn loại sản phẩm--</option>
                {{#each categories}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <!-- Danh sách các size -->
        <div class="mb-3">
            <label for="categories" class="form-label">Chọn Size</label>
            <div class="form-group" id="sizes-container">
                {{#each sizes}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="{{this._id}}" name="sizes[]" value="{{this.name}}">
                        <label class="form-check-label" for="size-{{this._id}}">
                            {{this.name}}
                        </label>
                    </div>
                {{/each}}
            </div>
        </div>
               <!-- Danh sách các màu -->
        <div class="mb-3">
            <label for="categorie" class="form-label">Chọn Màu</label>
            <div class="form-group" id="sizes-container">
                {{#each colors}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="{{this._id}}" name="colors[]" value="{{this.name}}">
                        <label class="form-check-label" for="color-{{this._id}}">
                            {{this.name}}
                        </label>
                    </div>
                {{/each}}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    </form>
 </div>

