 <div class="mt-4">
    <h3>Sửa Sản Phẩm</h3>
    <form class="mt-4" method="POST" action="/products/{{product._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">mô tả</label>
            <textarea class="form-control" id="description" name="description">{{product.description}}</textarea>
        </div>
         <div class="mb-3">
            <label for="image" class="form-label">Hình ảnh</label>
            <input type="text" class="form-control" value="{{product.image}}" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="color" class="form-label">Màu sản phẩm</label>
            <input type="text" class="form-control" value="{{product.color}}" id="color" name="color">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá tiền</label>
            <input type="text" class="form-control" value="{{product.price}}" id="price" name="price">
        </div>
        <button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
    </form>
 </div>